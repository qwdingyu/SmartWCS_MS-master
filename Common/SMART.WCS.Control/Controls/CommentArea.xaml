<UserControl x:Class="SMART.WCS.Control.CommentArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SMART.WCS.Control.Controls"
             mc:Ignorable="d" >
    <Grid>
        <Grid x:Name="_gridCommentArea"  Margin="20 0 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition   Width="Auto" />
                <ColumnDefinition   Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <!--#region + 북마크 적용-->
            <Image  x:Name="imgBookmarkApply"  Grid.Column="0" 
                Source="/SMART.WCS.Resource;component/Image/ico_question3.png" 
                Width="20"  Height="20"     Margin="0 0 5 0"   Visibility="Hidden" />
            <!--#endregion-->
            <TextBlock  x:Name="lblCommentArea"     Grid.Column="1"    HorizontalAlignment="Left"  VerticalAlignment="Center"  Padding="0"
                        Foreground="MidnightBlue"   FontFamily="맑은고딕"/>
        </Grid>
    </Grid>
</UserControl>
