                                <!--#region 버튼정의 - 메뉴 축소 후 현재 선택된 Node로 이동-->
                                <dx:SimpleButton    Margin="20,0,0,0"
                                                    Padding="0"
                                                    HorizontalAlignment="Left"
                                                    x:Name="BtnMenuSelectedFocus"
                                                    Click="BtnMenuSelectedFocus_Click">
                                    <Image  Source="/SMART.WCS.Resource;component/Image/ico_lt_tree_current.png" />
                                </dx:SimpleButton>
                                <!--#endregion-->

                                <!--#region 버튼 정의 - 메뉴 축소-->
                                <dx:SimpleButton    Margin="40,0,0,0"
                                                    Padding="0"
                                                    HorizontalAlignment="Left"
                                                    x:Name="BtnMenuAllHide"
                                                    Click="BtnMenuAllHide_Click">
                                    <Image  Source="/SMART.WCS.Resource;component/Image/ico_lt_tree_close.png" />
                                </dx:SimpleButton>
                                <!--#endregion-->

                                <!--#region 버튼 정의 - 메뉴 닫기-->
                                <!-- BtnBkStyle 로 테두리처리, SimpleButton-> Button  20180907 -->
                                <Button Grid.Column="4"
                                                    Margin="0"
                                                    Padding="0"
                                                    Style="{StaticResource BtnBkStyle}"
                                                    HorizontalAlignment="Right"
                                                    x:Name="BtnMenuFold"
                                                    Click="BtnMenuFold_Click">
                                    <Image  Source="/SMART.WCS.Resource;component/Image/Btn_lt_winfold.png"
                                            x:Name="imgFold" />
                                </Button>
                                <!--#endregion-->

                                <!--#region 버튼 정의 - 메뉴 열기-->
                                <!-- BtnBkStyle 로 테두리처리, SimpleButton-> Button  20180907 -->
                                <Button    Grid.Row="1" 
                                                    Grid.Column="4"
                                                    Margin="0"
                                                    Padding="0"
                                                    Style="{StaticResource BtnBkStyle}"
                                                    HorizontalAlignment="Right"
                                                    x:Name="BtnMenuExp"
                                                    Click="BtnMenuExp_Click" >
                                    <Image  Source="/SMART.WCS.Resource;component/Image/Btn_lt_winexp.png" 
                                            x:Name="imgExp" />
                                </Button>
                                <!--#endregion-->
                            </Grid>
                            <!-- 20180910 김형준 ShowBorder="False" -->
                            <!--#region 트리 리스트 컨트롤 영역-->
                            <Grid Grid.Row="4" x:Name="gridTreeControl">
                                <dxg:TreeListControl    Name="treeListControl" 
                                                        Height="{Binding ActualHeight,ElementName=gridTreeControl,Mode=OneWay}"
                                                        VerticalAlignment="Top"
                                                        ShowBorder="False"
                                                        BorderThickness="0"
                                                        ItemsSource="{Binding MenuList}"
                                                        PreviewMouseLeftButtonUp="TreeListControl_PreviewMouseLeftButtonUp">
                                    <!--Margin="0,0.8,0,-1"-->
                                    <dxg:TreeListControl.Columns>
                                        <dxg:TreeListColumn FieldName="MENU_NM" 
                                                            IsEnabled="False"
                                                            Width="160" >
                                            <!-- 20180913 hj.kim 이미지 표시 start -->
                                            
                                            
                                            <dxg:TreeListColumn.CellTemplate>
                                                <DataTemplate>
                                                    <DockPanel>
                                                        <dxe:TextEdit x:Name="PART_Editor" ShowBorder="False"/>
                                                        <dxe:ImageEdit x:Name="imgApp" HorizontalAlignment="Left" DockPanel.Dock="Left"
                                                                       Visibility="Collapsed" VerticalAlignment="Center" 
                                                                       Width="15" Height="15" Margin="0,1,0,0" ShowBorder="False" IsReadOnly="True"/>
                                                    </DockPanel>

                                                    <!--<DataTemplate.Triggers>
                                                        <DataTrigger Binding="{Binding RowData.Row.MENU_ID}" Value="SMS">
                                                            <Setter TargetName="imgApp" Property="Visibility" Value="Visible" />
                                                            <Setter TargetName="imgApp" Property="Source" Value="/SMART.WCS.Resource;component/Image/ico_lt_tree_menu_newwin.png" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding RowData.Row.MENU_ID}" Value="CNV">
                                                            <Setter TargetName="imgApp" Property="Visibility" Value="Visible" />
                                                            <Setter TargetName="imgApp" Property="Source" Value="/SMART.WCS.Resource;component/Image/ico_lt_tree_menu_newwin.png" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding RowData.Row.MENU_ID}" Value="QPS">
                                                            <Setter TargetName="imgApp" Property="Visibility" Value="Visible" />
                                                            <Setter TargetName="imgApp" Property="Source" Value="/SMART.WCS.Resource;component/Image/ico_lt_tree_menu_newwin.png" />
                                                        </DataTrigger>
                                                    </DataTemplate.Triggers>-->
                                                </DataTemplate>
                                            </dxg:TreeListColumn.CellTemplate>
                                            
                                            
                                            <!-- 20180913 hj.kim 이미지 표시 end -->
                                        </dxg:TreeListColumn>
                                        <dxg:TreeListColumn FieldName="MENU_ID" 
                                                        Visible="False" 
                                                        Width="160"/>
                                        <dxg:TreeListColumn FieldName="PARENT_ID" Visible="False" />
                                        <dxg:TreeListColumn FieldName="MENU_URL" Visible="False" />
                                        <!--<dxg:TreeListColumn FieldName="ATTR"    IsEnabled="False"   Width="50"/>-->
                                    </dxg:TreeListControl.Columns>
                                    <dxg:TreeListControl.View>
                                        <dxg:TreeListView   Name="treeListView"
                                                            KeyFieldName="TREE_ID"
                                                            ParentFieldName="PARENT_ID" 
                                                            IndicatorWidth="0"
                                                            Cursor="Hand"
                                                            AllowEditing="False"
                                                            dx:ScrollBarExtensions.ScrollBarMode="TouchOverlap"
                                                            AutoExpandAllNodes="True">
                                            <!-- 20180911 hj.kim Bold 처리 start -->
                                            <dxg:TreeListView.RowStyle>
                                                <Style TargetType="{x:Type dxg:RowControl}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Row.MENU_URL}" Value="">
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </dxg:TreeListView.RowStyle>
                                            <!-- 20180911 hj.kim Bold 처리 end -->
                                        </dxg:TreeListView>
                                    </dxg:TreeListControl.View>
                                </dxg:TreeListControl>
                            </Grid>
                            <!--#endregion-->

                            <!--<StackPanel Grid.Row="0">
                                <CheckBox Name="chkBtn" IsThreeState="False" Unchecked="chkBtn_Unchecked"  Checked="ToggleButton_Checked" />
                            </StackPanel>-->



                        </Grid>
                    </dxl:LayoutGroup>
                    <!--#endregion-->

                    <Border BorderBrush="#ced0d4" BorderThickness="1,0,0,0" >
                        <!--#region 우측 레이아웃-->
                        <dxl:LayoutGroup    Name="layoutGrpTab" Height="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Grid}}}"                 
                                        dxl:LayoutControl.AllowHorizontalSizing="True"
                                        VerticalAlignment="Stretch"
                                        HorizontalAlignment="Stretch" 
                                        Width="Auto">

                            <!--dxl:LayoutControl.AllowHorizontalSizing="False"-->
                            <!--ItemContainerStyle="{StaticResource tabItemStyle}"-->
                            <Grid Height="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Grid}}}">
                                <dx:DXTabControl    x:Name="tabControl"  AllowMerging="{x:Null}" Padding="0"
                                                VerticalAlignment="Top" Height="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Grid}}}"
                                                ItemsSource="{Binding Items}"
                                                TabContentCacheMode="CacheAllTabs" TabRemoving="TabControl_TabRemoving"
                                                TabHidden="TabControl_TabHidden"
                                                    TabHiding="TabControl_TabHiding"
                                                SelectionChanged="TabControl_SelectionChanged">
                                    <dx:DXTabControl.View>
                                        <dx:TabControlScrollView>
                                            <!--탭 컨트롤 헤더 위치 수정용-->
                                            <!--HeaderLocation="Left" HeaderOrientation="Horizontal" HeaderAutoFill="True"-->
                                        </dx:TabControlScrollView>
                                    </dx:DXTabControl.View>

                                </dx:DXTabControl>

                                <!-- 메인 이미지 -->
                                <Grid x:Name="imgMain" Visibility="Collapsed">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="330" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="330" />
                                    </Grid.RowDefinitions>

                                    <Image HorizontalAlignment="Left" Grid.Row="0" Panel.ZIndex="1" VerticalAlignment="Top" Margin="0" Width="Auto" 
                                           Source="/SMART.WCS.Resource;component/Image/img_mainlist_left_top.png" />
                                    <Image Stretch="Fill" Grid.Row="0" Grid.RowSpan="3" Source="/SMART.WCS.Resource;component/Image/bg_mainlist_yg.png" Panel.ZIndex="0"/>
                                    <Image HorizontalAlignment="Right" Panel.ZIndex="1" Grid.Row="2" VerticalAlignment="Bottom" Margin="0"  
                                        Source="/SMART.WCS.Resource;component/Image/img_mainlist_rightbottom.png" />
                                </Grid>
                                
                            </Grid>
                        </dxl:LayoutGroup>
                        <!--#endregion-->
                    </Border>
                </dxl:LayoutControl>
            </Grid>

        </DockPanel>
    </Border>
</Window>
